@model JasperSite.Areas.Admin.ViewModels.SettingsNameViewModel

@Html.Partial("_SuccessModalPartialViewTemp")
@Html.Partial("_ErrorModalPartialViewTemp")
@Html.Partial("_UnobtrusiveValidationFixPartialView", "#settingsForm")

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form id="settingsform" asp-action="savesettings" asp-controller="settings"
      asp-area="Admin" data-ajax="true" data-ajax-method="POST" data-ajax-update="#mainForm">

    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="WebsiteName"></label>
            <input asp-for="WebsiteName" class="form-control" />
            <span asp-validation-for="WebsiteName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-jasper"><i class="fa fa-floppy-o" aria-hidden="true"></i> @Localizer["Save changes"]</button>
        </div>
    </div>

</form>
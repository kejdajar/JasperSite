
@{
    Layout = J.Layout("_Layout.cshtml",Context.Request);
    ViewData["Title"] = "JasperSite";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();



            $('[data-toggle="tooltip"]').tooltip();


        });

    </script>
}
@section Styles {
    <style>
        .carousel-item {
            max-height: 300px;
        }

        #technologies {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }

            #technologies img {
                margin: 10px;
                max-height: 150px;
            }
    </style>
}




    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="@J.File("./Images/bg_pen_paper.jpg")" alt="First slide">
                <div class="carousel-caption d-none d-md-block" style="color:black!important">
                    <h3>J<span style="color:#AB47BC">asp</span>erSite</h3>
                    <p>Simple cross-platform content management system.</p>
                </div>

            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="@J.File("./Images/brush.jpg")" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Additional themes</h3>
                    <p>JasperSite supports custom themes.</p>

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="@J.File("./Images/bg_programming.jpg")" alt="Third slide">
                <div class="carousel-caption d-none d-md-block" style="background-color:rgba(0, 0, 0, 0.5)!important">
                    <h3>Configurable</h3>
                    <p>Thanks to configuration files, the system can be easily configured.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




    <div class="container jasper-container-inner">

        <section class="j-section">
            <div class="row">
                <div class="col-md-6">

                    <ul class="list-group">
                        <li class="list-group-item active" style="background-color:#AB47BC!important;border-color:#DFDFDF!important;padding:5px!important"> <h5 style="text-align:center">Welcome!</h5></li>
                        <li class="list-group-item">JasperSite is cross-platform content management system built on the ASP.NET Core MVC.</li>
                        <li class="list-group-item">Enables to easily create own web pages.</li>
                        <li class="list-group-item">Includes management of articles, categories, users, themes and other settings.</li>

                    </ul>

                </div>

                <div class="col-md-6">

                    <ul class="list-group">
                        <li class="list-group-item active" style="background-color:#AB47BC!important;border-color:#DFDFDF!important;padding:5px!important">  <h5 style="text-align:center">Student's Work</h5></li>
                        <li class="list-group-item">
                            <p> This project is a part of my master's thesis on Czech University of Life Sciences in Prague.</p>
                            <img src="@J.File("./Images/logo.gif")" class="img-fluid" style="max-height:145px" />
                        </li>
                    </ul>

                </div>
            </div>
        </section>




        <section class="j-section">
            <div class="row">

                <div class="col-md-12">
                    <div class="list-group">
                        <div class="list-group-item list-group-item-action flex-column align-items-start active" style="background-color:#AB47BC!important;border-color:#DFDFDF!important;padding:5px!important">
                            <h5 style="text-align:center;padding:0px">Step by Step</h5>
                        </div>
                        <div class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Demo page</h6>
                                <small class="text-muted">1. step</small>
                            </div>
                            <p class="mb-1">You are currently on a demo page. This page is a stand-alone theme, but does not show any custom content.</p>
                            <small class="text-muted">Similarly can look your own page.</small>
                        </div>
                        <a asp-action="index" asp-area="admin" asp-controller="login" target="_blank" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Login</h6>
                                <small class="text-muted">2. step</small>
                            </div>
                            <p class="mb-1">
                                Login into the administration section using pre-made admin account:                                
                                <ul><li>username: admin</li><li>password: admin</li></ul>
                                <small class="text-muted">Unlike the password, the username is not case-sensitive.</small>
                            </p>

                        </a>

                        <a asp-action="index" asp-area="admin" asp-controller="users" target="_blank" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Change of password</h6>
                                <small class="text-muted">3. step</small>
                            </div>
                            <p class="mb-1">
                                In the Users section you should choose more secure password.                              

                            </p>
                            <p class="mb-1">
                                <small class="text-muted">
                                Use upper-case and lower-case, numbers and special characters to make your password more secure.
                                </small>
                            </p>

                        </a>

                        <a asp-action="index" asp-area="admin" asp-controller="home" target="_blank" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Finishing setup</h6>
                                <small class="text-muted">4. step</small>
                            </div>
                            <p class="mb-1">
                                Finally you can add more users with limited authorization, change the name
                                of your website and add new themes. You can also add any number of new categories
                                and articles.

                            </p>
                            <p class="mb-1">
                                <small class="text-muted">This CMS can do many more!</small>
                            </p>

                        </a>

                    </div>






                </div>
            </div>
        </section>

        <section class="j-section">


            <ul class="list-group">
                <li class="list-group-item active" style="background-color:#AB47BC!important;border-color:#DFDFDF!important;padding:5px!important">
                    <h5 style="text-align:center">Technologies</h5>
                </li>
                <li class="list-group-item ">


                    <div id="technologies">


                        <img data-toggle="tooltip" title=".NET Core" src="~/Themes/Default/Images/netcore.svg" class="img-fluid" />

                        <img data-toggle="tooltip" title="ASP.NET Core MVC" src="~/Themes/Default/Images/aspnet_logo.svg" class="img-fluid" />

                        <img data-toggle="tooltip" title="Bootstrap" src="~/Themes/Default/Images/bootstrap.jpg" class="img-fluid" style="max-width:120px" />

                        <img data-toggle="tooltip" title="webpack" src="~/Themes/Default/Images/webpack.svg" class="img-fluid" />

                        <img data-toggle="tooltip" title="Gulp" src="~/Themes/Default/Images/gulp.svg" class="img-fluid" />

                        <img data-toggle="tooltip" title="GIT" src="~/Themes/Default/Images/git.svg" class="img-fluid" />

                        <img data-toggle="tooltip" title="Font Awesome" src="~/Themes/Default/Images/font-awesome.png" class="img-fluid" style="max-width:180px" />


                        <img data-toggle="tooltip" title="jQuery" src="~/Themes/Default/Images/jquery.svg" class="img-fluid" style="max-width:200px" />

                        <img data-toggle="tooltip" title="MySQL" src="~/Themes/Default/Images/mysql.svg" class="img-fluid" style="max-width:160px" />

                        <img data-toggle="tooltip" title="MS SQL Server" src="~/Themes/Default/Images/mssql.jpg" class="img-fluid" style="max-width:160px" />


                    </div>
                </li>
            </ul>

        </section>
    </div>
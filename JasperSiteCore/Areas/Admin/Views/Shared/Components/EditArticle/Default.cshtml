@model JasperSiteCore.Areas.Admin.ViewModels.EditArticleViewModel


<form asp-action="Index" asp-controller="Article" asp-area="Admin">
    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HtmlContent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="HtmlContent" class="form-control" rows="10" > </textarea>
                <span asp-validation-for="HtmlContent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishDate" class="form-control tbPublishDate" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uložit" class="btn btn-jasper" />
                <a href="/Admin/Home/Articles#articles" class=" btn btn-secondary">Zpět</a>
            </div>
        </div>
    </div>
</form>



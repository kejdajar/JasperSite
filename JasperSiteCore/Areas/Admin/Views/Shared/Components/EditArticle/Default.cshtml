@model JasperSiteCore.Areas.Admin.ViewModels.EditArticleViewModel


<form asp-action="Index" asp-controller="Article" asp-area="Admin">
    <div class="form-horizontal">

        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HtmlContent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="HtmlContent" class="form-control" rows="10" > </textarea>
                <span asp-validation-for="HtmlContent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishDate" class="form-control tbPublishDate" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            
                <button type="submit" asp-area="Admin" asp-controller="Article" asp-action="Index" class="btn btn-jasper"><i class="fa fa-floppy-o" aria-hidden="true"></i> Uložit</button>
                <a href="/Admin/Home/Articles#articles" class=" btn btn-secondary"><i class="fa fa-undo" aria-hidden="true"></i> Zpět</a>
                
                    <a asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-jasper btn-jasper-delete"> <i class="fa fa-trash fa-1x" aria-hidden="true"></i>   Odstranit článek</a>
                

</div>
        </div>
    </div>
</form>



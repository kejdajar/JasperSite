@model JasperSiteCore.Areas.Admin.ViewModels.CategoriesViewModel
@using JasperSiteCore.Models.Database;
@{
    ViewBag.Title = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron"><h1><i class="fa fa-diamond j-icon" aria-hidden="true"></i> Rubriky</h1></div>

<p>
   Zde si nastavte vaše rubriky
</p>

<h2>Kategorie</h2>
<table class="j-table table-responsive">
    <tr><td>Název</td></tr>
    @foreach(Category c in Model.Categories)
    {
        <tr><td>@c.Name</td></tr>
    }
</table>